{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start: admin",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/apps/admin"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "group": "frontend",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "ready in*"
          }
        }
      ]
    },
    {
      "label": "start: storefront",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/apps/storefront"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "group": "frontend",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "ready in*"
          }
        }
      ]
    },
    {
      "label": "start: functions",
      "type": "shell",
      "command": "npm start",
      "problemMatcher": "$func-node-watch",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/apps/functions"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "group": "frontend",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "start: all",
      "type": "shell",
      "dependsOn": [
        "start: admin",
        "start: storefront",
        "start: functions"
      ],
      "problemMatcher": []
    },
    {
      "type": "func",
      "label": "func: host start",
      "command": "host start",
      "problemMatcher": "$func-node-watch",
      "isBackground": true,
      "dependsOn": "npm install (functions)",
      "options": {
        "cwd": "${workspaceFolder}/apps\\functions"
      }
    },
    {
      "type": "shell",
      "label": "npm install (functions)",
      "command": "npm install -ws functions",
      "options": {
        "cwd": "${workspaceFolder}/apps"
      }
    },
    {
      "type": "shell",
      "label": "npm prune (functions)",
      "command": "npm prune --production",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/apps\\functions"
      }
    }
  ]
}