{
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch admin via Chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/apps/admin",
            "preLaunchTask": "start: admin"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch storefront via Chrome",
            "url": "http://localhost:3001",
            "webRoot": "${workspaceFolder}/apps/storefront",
            "preLaunchTask": "start: storefront"
        },
        {
            "name": "Attach to Node Functions",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "preLaunchTask": "func: host start"
        }
    ],
    "version": "0.2.0"
}